<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colornew"

    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:hint="Type here.."
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="352dp"
        android:layout_height="245dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="117dp"
        android:layout_toEndOf="@+id/editText"
        android:paddingBottom="10dp">

        <RadioButton
            android:id="@+id/one"
            android:layout_width="109dp"
            android:layout_height="31dp"
            android:hint="
 -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (gif|jpeg|jpg|bmp|tif|tiff)"
            android:text="Image"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/two"
            android:layout_width="125dp"
            android:layout_height="26dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of mp3"
            android:text="Music"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/three"
            android:layout_width="131dp"
            android:layout_height="28dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (/ebook|/ebooks|/book|/books|/doc) (chm|pdf)
"
            android:text="eBooks"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/four"
            android:layout_width="147dp"
            android:layout_height="23dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (txt|rtf|chm|pps|odt)
"
            android:text="Text Files"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/five"
            android:layout_width="201dp"
            android:layout_height="26dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (zip|rar)"
            android:text="Compressed Files"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="343dp"
            android:layout_height="111dp"
            android:text="TextView"
            android:textColor="#ffff" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="193dp"
        android:layout_height="73dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:text="Search" />

</RelativeLayout>