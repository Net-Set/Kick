<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colornew"

    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="336dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Type here.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="303dp"
        android:layout_height="193dp"
        android:id="@+id/radioGroup"
        android:layout_above="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="10dp">

        <RadioButton
            android:id="@+id/one"
            android:layout_width="109dp"
            android:layout_height="31dp"
            android:hint="
 -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (.gif,.jpeg,.jpg,.bmp,.tif,.tiff)"
            android:text="Image"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/two"
            android:layout_width="125dp"
            android:layout_height="26dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of mp3"
            android:text="Music"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/three"
            android:layout_width="107dp"
            android:layout_height="43dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of +(.pdf,.rtf,.txt,.chm,.pps,.rar,.doc)
"
            android:text="eBooks"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/four"
            android:layout_width="149dp"
            android:layout_height="36dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (.txt,.rtf,.chm,.pps,.odt)
"
            android:text="Text Files"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/five"
            android:layout_width="193dp"
            android:layout_height="33dp"
            android:hint=" -html -htm -php -shtml -opendivx -md5 -md5sums -xxx intitle:index.of (.zip,.rar)"
            android:text="Compressed Files"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#ffff"/>

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="34dp"
        android:text="Search" />

</RelativeLayout>